# Environment Configuration for Roomies API

# Node Environment
NODE_ENV=production

# Application Configuration
PORT=3000

# Database Configuration - Azure Cosmos DB for PostgreSQL
# Get these values from Azure Portal > Cosmos DB > Connection strings
POSTGRES_HOST=your-cosmos-postgres-account.postgres.cosmos.azure.com
POSTGRES_PORT=5432
POSTGRES_USER=citus
POSTGRES_PASSWORD=your-secure-password-here
POSTGRES_DB=roomies_db

# SSL Configuration (required for Azure Cosmos DB)
POSTGRES_SSL=true
POSTGRES_SSL_REJECT_UNAUTHORIZED=false

# Connection Pool Settings (recommended for Azure)
POSTGRES_MAX_CONNECTIONS=20
POSTGRES_IDLE_TIMEOUT=30000
POSTGRES_CONNECTION_TIMEOUT=10000

# Kafka Configuration (if using Azure Event Hubs)
KAFKA_BROKERS=your-eventhub-namespace.servicebus.windows.net:9093
KAFKA_CLIENT_ID=roomies-microservice
KAFKA_GROUP_ID=roomies-consumer-group
KAFKA_SASL_MECHANISM=plain
KAFKA_SASL_USERNAME=$ConnectionString
KAFKA_SASL_PASSWORD=Endpoint=sb://your-eventhub-namespace.servicebus.windows.net/;SharedAccessKeyName=RootManageSharedAccessKey;SharedAccessKey=your-key

# Logging
LOG_LEVEL=info

# Health Check
HEALTH_CHECK_ENABLED=true
